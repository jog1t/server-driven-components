{
  "name": "kawa",
  "version": "0.1.0",
  "description": "Simple, type-safe reactivity for React Server Components",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./rivet": {
      "types": "./dist/rivet/index.d.ts",
      "import": "./dist/rivet/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "keywords": [
    "react",
    "server-components",
    "reactive",
    "streaming",
    "sse"
  ],
  "peerDependencies": {
    "react": ">=19.0.0",
    "rivetkit": ">=2.0.0"
  },
  "peerDependenciesMeta": {
    "rivetkit": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^19.2.7",
    "tsup": "^8.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@preact/signals-core": "^1.12.1"
  }
}
